{
  "compilerOptions": {
    "esModuleInterop": true,
    "jsx": "react",
    "module": "CommonJS",
    "noImplicitReturns": true,
    "noUnusedLocals": false,
    "outDir": "lib",
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "es2020"
  },
  "compileOnSave": true,
  "include": ["src", "scripts"]
}
